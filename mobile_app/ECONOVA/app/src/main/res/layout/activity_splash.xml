<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream"
    tools:context=".SplashActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="92dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/econovaanimation" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/transformationanimation"
        android:layout_width="274dp"
        android:layout_height="268dp"
        android:layout_marginTop="296dp"
        app:layout_constraintTop_toBottomOf="@id/lottieAnimationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/transforminganimation" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/leafani"
        android:layout_width="415dp"
        android:layout_height="436dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.443"
        app:lottie_autoPlay="false"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/leaftransanimation" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/leafanimation"
        android:layout_width="414dp"
        android:layout_height="382dp"
        android:layout_marginTop="156dp"
        android:alpha="1"
        android:scaleX="-1"
        app:layout_constraintTop_toBottomOf="@id/transformationanimation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/ecoleafanimation" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationoverallleaf"
        android:layout_width="439dp"
        android:layout_height="660dp"
        android:layout_marginTop="4dp"
        android:alpha="0.2"
        android:scaleX="-1"
        app:layout_constraintTop_toBottomOf="@id/leafanimation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        app:lottie_rawRes="@raw/overallleafanimation" />

</androidx.constraintlayout.widget.ConstraintLayout>
