<?xml version="1.0" encoding="utf-8"?>

<!-- res/drawable/background_gradient.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Grey background layer -->
    <item android:drawable="@color/background_grey" />

    <!-- White gradient overlay -->
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:startColor="@color/background_grey"
                android:endColor="@color/background_white"
                android:type="linear" />
        </shape>
    </item>
</layer-list>
